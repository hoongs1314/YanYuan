/* pages/mine/mine.wxss */

.userinfo {
  position: relative;
  width: 750rpx;
  height: 250rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
 
.userinfo-avatar {
  overflow:hidden;
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  margin-top: 50rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}
.userNickName{
  height: 70rpx;
  width: 60%;
  text-align: center;
  margin: auto auto;
  margin-bottom: 50rpx;
  font-size: 50rpx;
  background-color: #e9e9e9;
  border-radius:10%;
}

.avatar {
  display: flex;
  justify-content: center;
  margin-top: 10%;
  margin-bottom: 20px;
}

.avatar image {
  width: 150px;
  height: 150px;
}

.mtext {
  height: 50px;
  margin-left: 20px;
}

.mtext text {
  margin-left: 10px;
  font-size: 16px;
  color: gray;
}

.mtext image {
  width: 20px;
  height: 20px;
}

.mline {
  height: 1px;
  width: 90%;
  margin-left: 10px;
  margin-top: 15px;
  background-color: #5e5e5e;
}

.changebt {
  margin-top: 25%;
  margin-right: 15px;
  width: 100px;
  text-align: right;
  font-size: 12px;
  color: #e99e9e;
  background-color: white;
}
.toMyOrder{
  font-size: 40rpx;
  margin-top: 40rpx;
  width: 40%;
  color: #ffffff;
  background: #8bc34a;
}