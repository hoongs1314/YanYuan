        <view class='myMsgoItem'>
          名字:{{userName}}
          <text style='color:rgb(253, 225, 163)'>||</text> 性别:{{userSex}}
        </view>
        <view class='myMsgtItem'>
          寝室:{{userRoom}}
          <text style='color:rgb(253, 225, 163)'>||</text> 电话:{{userPhone}}
        </view>

      </view>



    </view>
    <view style='margin-top:80rpx; color:grey'>
      <view class="m_button-line">
        <block wx:for="i <= 4" wx:key="i">
          <view class='m_button-line-1'></view>
          <view class='m_button-line-2'></view>
          <view class='m_button-line-3'></view>
          <view class='m_button-line-2'></view>
        </block>
      </view>


    </view>
