<!--pages/mine/mine.wxml-->
<view>
<view class="userinfo">
  <view class="userinfo-avatar">
    <open-data  type="userAvatarUrl"></open-data>
  </view>
</view>
<view class='userNickName'>
    <open-data type="userNickName"></open-data>
</view>
  <view class='mtext'>
    <view style='display:flex;float:left'>
      <image src='../images/name.png'></image>
      <text name='name'>姓 名：</text>
    </view>
    <view>{{name}}</view>
    <view class='mline'></view>
  </view>

  <view class='mtext'>
    <view style='display:flex;float:left'>
      <image src='../images/sex.png'></image>
      <text name='sex'>性 别：</text>
    </view>
    <view>{{sex}}</view>
    <view class='mline'></view>
  </view>

  <view class='mtext'>
    <view style='display:flex;float:left'>
      <image src='../images/room.png'></image>
      <text name='room'>宿舍号：</text>
    </view>
    <view>{{room}}</view>
    <view class='mline'></view>
  </view>

  <view class='mtext'>
    <view style='display:flex;float:left'>
      <image src='../images/phone.png'></image>
      <text name='phone'>手机号：</text>
    </view>
    <view>{{phone}}</view>
    <view class='mline'></view>
  </view>
  <view bindtap='torevise'>信息错误？点此修改</view>
</view>

<view>
  <button class='toMyOrder' bindtap='toMyOrder'>查看我的订单</button>
</view>